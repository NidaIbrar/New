<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration__continue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nidaawan.android_smester_project.Registration_Continue">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtView_AssignedCode"
        android:layout_toEndOf="@+id/txtView_AssignedCode"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="52dp"
        android:id="@+id/editTxt_AssignedCode" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtView_Specialization"
        android:layout_alignLeft="@+id/editTxt_AssignedCode"
        android:layout_alignStart="@+id/editTxt_AssignedCode"
        android:id="@+id/spinner" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginTop="37dp"
        android:id="@+id/editTxt_DoctorName" />

    <TextView
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_DoctorName"
        android:layout_alignLeft="@+id/txtView_DoctorName"
        android:layout_alignStart="@+id/txtView_DoctorName"
        android:layout_marginTop="31dp"
        android:id="@+id/txtView_Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignTop="@+id/txtView_Email"
        android:layout_alignLeft="@+id/editTxt_DoctorName"
        android:layout_alignStart="@+id/editTxt_DoctorName"
        android:id="@+id/editTxt_Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editTxt_Email"
        android:layout_alignLeft="@+id/editTxt_Email"
        android:layout_alignStart="@+id/editTxt_Email"
        android:layout_marginTop="39dp"
        android:id="@+id/editTxt_Password"
        android:hint="Enter Password" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txtView_AssignedCode"
        android:layout_toEndOf="@+id/txtView_AssignedCode"
        android:layout_marginBottom="12dp"
        android:id="@+id/btn_SaveRegistration" />

    <TextView
        android:text="Doctor Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView_DoctorName"
        android:layout_alignBaseline="@+id/editTxt_DoctorName"
        android:layout_alignBottom="@+id/editTxt_DoctorName"
        android:layout_alignLeft="@+id/txtView_AssignedCode"
        android:layout_alignStart="@+id/txtView_AssignedCode" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/txtView_Password"
        android:layout_below="@+id/editTxt_Email"
        android:layout_alignLeft="@+id/txtView_Email"
        android:layout_alignStart="@+id/txtView_Email" />

    <TextView
        android:text="Specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/txtView_Specialization"
        android:layout_below="@+id/editTxt_AssignedCode"
        android:layout_alignRight="@+id/txtView_DoctorName"
        android:layout_alignEnd="@+id/txtView_DoctorName" />

    <TextView
        android:text="Assigned Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/txtView_AssignedCode"
        android:layout_alignBottom="@+id/editTxt_AssignedCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
